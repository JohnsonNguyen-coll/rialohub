generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?
  emailVerified DateTime?
  image         String?
  username      String?    @unique
  password      String?
  role          String     @default("user") // Added role
  twitterHandle String?
  twitterId     String?    @unique
  discordHandle String?
  discordId     String?    @unique
  accounts      Account[]
  feedback      Feedback[]
  projects      Project[]
  sessions      Session[]
  votes         Vote[]
  notifications Notification[] @relation("UserNotifications")
  initiatedNotifications Notification[] @relation("FromUserNotifications")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id          String     @id @default(cuid())
  userId      String
  name        String
  description String
  link        String
  category    String
  isPinned    Boolean    @default(false)
  isEvent     Boolean    @default(false)
  isTop       Boolean    @default(false)
  eventId     String?    // Added for entries within events
  createdAt   DateTime   @default(now())
  feedback    Feedback[]
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes       Vote[]
  event       Project?   @relation("EventEntries", fields: [eventId], references: [id])
  entries     Project[]  @relation("EventEntries")
  notifications Notification[]
}

model Vote {
  id        String   @id @default(cuid())
  userId    String
  projectId String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
}

model Feedback {
  id        String     @id @default(cuid())
  userId    String
  projectId String
  content   String
  parentId  String?
  createdAt DateTime   @default(now())
  parent    Feedback?  @relation("FeedbackToFeedback", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Feedback[] @relation("FeedbackToFeedback")
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id          String   @id @default(cuid())
  userId      String   // Target user (the one being notified)
  fromId      String   // Source user (the one who commented/voted)
  projectId   String?  // Related project
  type        String   // 'vote', 'comment', 'reply'
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  user        User     @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  from        User     @relation("FromUserNotifications", fields: [fromId], references: [id], onDelete: Cascade)
  project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
